#/usr/bin/bash
if [ -z "$1" ]
    then
        FILENAME=$(date +'Daily_%Y%m%d')
    else
        FILENAME=$1
fi
README="${FILENAME}/README.md"
TS_FILE="${FILENAME}/${FILENAME}.ts"
if [ -z "$1" ]
    then
        README="daily_excercises/${README}"
        TS_FILE="daily_excercises/${TS_FILE}"
fi

mkdir -p $FILENAME
touch $README
touch $TS_FILE
cp DEFAULT_TSCONFIG.json $FILENAME/tsconfig.json